<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ksmart.project.test26.service.IdolMapper">
	<!-- 아이돌 리스트 보기 -->
	<select id="selectIdolList" resultType="ksmart.project.test26.service.Idol">
		SELECT
		idol_id as idolId
		,idol_name as idolName
		FROM idol;
	</select>
	<!-- 아이돌 등록하기 -->
	<insert id="insertIdol" parameterType="ksmart.project.test26.service.Idol">
		INSERT INTO idol(
		idol_name
		)
		VALUES(
		#{idolName}
		)
	</insert>
	<!-- 수정할 아이돌 한명 불러오기 -->
	<select id="selectListId" resultType="ksmart.project.test26.service.Idol">
		SELECT
		idol_name as idolName
		,idol_id as idolId
		 FROM idol WHERE idol_id=#{idolId}
	</select>
	<!-- 아이돌 수정하기 -->
	<update id="IdolUpdate" parameterType="ksmart.project.test26.service.Idol">
		UPDATE idol
		SET idol_name = #{idolName}
		WHERE idol_id = #{idolId}
	</update>
	<!-- 아이돌 삭제하기 -->
	<delete id="deleteIdol" parameterType="ksmart.project.test26.service.Idol">
		DELETE FROM idol
		WHERE
		idol_id = #{idolId}
	</delete>
</mapper>